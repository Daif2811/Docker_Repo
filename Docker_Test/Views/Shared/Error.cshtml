@model Docker_Test.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Oops! Something went wrong.</h1>

@if (Model.ShowRequestId)
{
    <p><strong>Request ID:</strong> @Model.RequestId</p>
}

@if (!string.IsNullOrEmpty(Model.ExceptionMessage))
{
    <div class="alert alert-danger">
        <strong>Error Message:</strong> @Model.ExceptionMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.StackTrace))
{
    <div class="alert alert-warning">
        <strong>Stack Trace:</strong> <pre>@Model.StackTrace</pre>
    </div>
}

<p>We apologize for the inconvenience. Our team is looking into it.</p>
<p><a href="/">Go back to the homepage</a></p>
